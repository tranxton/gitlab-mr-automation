{
	"name": "tranxton/gitlab-mr-automation",
	"description": "A utility script to automate the preparation of merge requests for code review.",
	"license": "MIT",
	"type": "library",
	"authors": [
		{
			"name": "Rustem Akhmetzianov",
			"email": "rustem.akhmetzianov@gmail.com"
		}
	],
	"require": {
		"php": "^7.1",
		"symfony/console": "^3.4",
		"symfony/filesystem": "^3.4",
		"symfony/dotenv": "^3.4"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.4",
		"phpstan/phpstan-phpunit": "^1.0",
		"phpstan/phpstan-strict-rules": "^1.1"
	},
	"config": {
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"Tranxton\\GitlabMrAutomation\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tranxton\\GitlabMrAutomation\\Tests\\": "tests/"
		}
	},
	"extra": {
		"symfony": {
			"allow-contrib": false,
			"require": "^3.4"
		}
	}
}